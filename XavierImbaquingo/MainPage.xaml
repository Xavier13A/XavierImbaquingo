<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XavierImbaquingo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenidos" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            
            
        </Frame>
        
       
        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Label Text="Ingrese el usuario" Grid.Row="0" Grid.Column="0"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario" Grid.Row="0" Grid.Column="1"/>


            <Label Text="Ingrese la contraseña" Grid.Row="1" Grid.Column="0"/>

            <Entry x:Name="txtContraseña" Placeholder="Ingrese su contraseña" IsPassword="True" Grid.Row="1" Grid.Column="1">
            </Entry>

        </Grid>

        <Button x:Name="btnIniciar" Text="Iniciar Secion" Grid.Row="2" Grid.Column="1" Clicked="btnIniciar_Clicked"/>

    </StackLayout>

</ContentPage>
